{% extends 'base.html.twig' %}

{% block title %}Edit car{% endblock %}

{% block body %}
    <h1>Edit car</h1>

    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.price) }}
    {{ form_row(form.fuel) }}
    {{ form_row(form.transmission) }}
    {{ form_row(form.manufacturer) }}
    {{ form_row(form.model) }}
    {{ form_row(form.description) }}
    {{ form_row(form.quantity) }}
    {{ form_row(form.category) }}
    <button type="submit" class="btn btn-primary">Save changes</button>
    {{ form_end(form) }}
    
{% endblock %}